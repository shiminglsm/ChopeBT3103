<!Doctype html>
<html>
    <head>
        <% include partials/head %>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container">
              <a class="navbar-brand" href="#">Chope-A-Lot</a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item">
                    <a class="nav-link" href="/admin/userloyalty">User Loyalty
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/admin/carpark">Carpark Peak Period</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/admin/complaint">Complaints</a>
                  </li>
                  <li class="nav-item active">
                    <a class="nav-link" href="#">Resolve Complaints</a>
                    <span class="sr-only">(current)</span>
                  </li>
                  <li>
                    <p class="navbar-btn" style="margin-bottom:1px">
                        <a href="/" id = "signout" class="button btn btn-primary">Sign Out</a>
                    </p>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
          <br><br><br>
          <div class="row">
            <div class="col-md-8">
              <table class="table table-striped table-sm" style="margin-left:200px; margin-top:50px">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Carpark Name</th>
                    <th scope="col">Complaint Date</th>
                    <th scope="col">Resolve Complaint</th>
                  </tr>
                </thead>
                <tbody>
                  <% var keys = Object.keys(complaints) %>
                  <% keys.forEach(function(key){ %>
                  <% if (complaints[key].Resolved == "false") { %>
                  <% count +=1 %>
                      <tr>
                      <th scope="row"><%= count %></th>
                       <td> <%= complaints[key].CarparkID %></td> 
                       <td> <%= complaints[key].ComplaintDate %></td> 
                      <td><button id="resolve" class="btn btn-primary" style="padding: 3px">Resolve</button></td>
                      </tr>
                    <% } %>
                  <% }) %>
                </tbody>
              </table>
      </div>
    </div>

        <% include partials/scripts %>
        
    </body>    
</html>